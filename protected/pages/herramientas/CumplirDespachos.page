<%@ MasterClass="Application.layouts.MainLayout" Title="Interface Ministerio Transporte" %>
<com:TContent ID="Main">
    <div class="hero-unit">
        <com:TForm>            
            <com:TDataGrid
                ID="DGDespachos"
                DataKeyField="OrdDespacho"
                AutoGenerateColumns="false"
                AllowPaging="true"
                PageSize="30"
                CssClass="datagrid-datos"
                PagerStyle.Mode="Numeric"
                PagerStyle.HorizontalAlign="Right"
                HeaderStyle.CssClass="header-fondo"
                ItemStyle.CssClass="item-style"
                AlternatingItemStyle.CssClass="alternating-style"
                OnDeleteCommand="Cumplir"
                OnEditCommand="NoCumplir"
                OnPageIndexChanged="changePage"
                OnPagerCreated="pagerCreated">

                <com:TBoundColumn
                    ID="ClmOrdDespacho"
                    HeaderText="Orden"
                    HeaderStyle.Width="80px"
                    DataField="OrdDespacho"/>                              

                <com:TBoundColumn
                    ID="ClmManifiesto"
                    HeaderText="Manifiesto"
                    HeaderStyle.Width="80px"
                    DataField="ManifiestoInterno"/>                                 

                <com:TBoundColumn
                    ID="ClmFhExpedicion"
                    HeaderText="Fecha"
                    HeaderStyle.Width="80px"
                    DataField="FhExpedicion"/>                 
                
                <com:TBoundColumn
                    ID="ClmEnvioManifiesto"
                    HeaderText="Enviado"
                    HeaderStyle.Width="5px"
                    DataField="EnvioManifiesto"/> 
                
                <com:TBoundColumn
                    ID="ClmNumeroCumplidoRemesa"
                    HeaderText="C. Remesa"
                    HeaderStyle.Width="5px"
                    DataField="NumeroCumplidoRemesa"/> 
                
                <com:TBoundColumn
                    ID="ClmNumeroCumplidoManifiesto"
                    HeaderText="C. Manifiesto"
                    HeaderStyle.Width="5px"
                    DataField="NumeroCumplidoManifiesto"/>                                               
                
                <com:TTemplateColumn HeaderText="Cumplir" ID="ClmProcesar" ItemStyle.HorizontalAlign="Center"  >
                    <prop:ItemTemplate>
                        <com:TButton
                            ID="DeleteColumn"
                            Text = "Cumplir"
                            CommandName="delete"/>
                    </prop:ItemTemplate>
                </com:TTemplateColumn>   
                
                <com:TTemplateColumn HeaderText="No cumplir" ID="ClmNoCumplir" ItemStyle.HorizontalAlign="Center"  >
                    <prop:ItemTemplate>
                        <com:TButton
                            ID="EditColumn"
                            Text = "No cumplir"
                            CommandName="edit"/>
                    </prop:ItemTemplate>
                </com:TTemplateColumn> 
                
            </com:TDataGrid>
            <com:TButton ID="BtnGenerarSeleccionados" OnClick="procesarDespachoVarios" Text="Generar seleccionados" visible ="false"/>
            <com:TActiveLabel ID="LblMensaje" Text =""/>
            <br /><br /><br />
            <com:TDataGrid
                ID="DGErrores"
                DataKeyField="codigo"
                AutoGenerateColumns="false"
                AllowPaging="true"
                PageSize="15"
                PagerStyle.Mode="Numeric"
                PagerStyle.HorizontalAlign="Right">

                <com:TBoundColumn
                    ID="ClmCodigo"
                    HeaderText="Codigo"
                    HeaderStyle.Width="100px"
                    DataField="codigo"/>
                
                <com:TBoundColumn
                    ID="ClmFecha"
                    HeaderText="Fecha"
                    HeaderStyle.Width="20px"
                    DataField="fecha"/>
                
                <com:TBoundColumn
                    ID="ClmModulo"
                    HeaderText="Modulo"
                    HeaderStyle.Width="80px"
                    DataField="modulo"/>

                <com:TBoundColumn
                    ID="ClmReferencia"
                    HeaderText="Referencia"
                    HeaderStyle.Width="80px"
                    DataField="referencia"/>                
                
                <com:TBoundColumn
                    ID="ClmError"
                    HeaderText="Error"
                    HeaderStyle.Width="400px"
                    DataField="error"/>                               
            </com:TDataGrid>            
        </com:TForm>                    
    </div>

</com:TContent>